<h1> New User</h1>
<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
    <% end %>

<%= form_with model:User.new do |f| %>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
    <%= f.label :username, "Username" %>
    <%= f.text_field :username %>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>

    <%= f.submit "Create new user" %>
    <% end %>


